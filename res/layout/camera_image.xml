<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"

	android:minWidth="200dip" android:id="@+id/camera_view_main_layout"
	android:background="@drawable/popup_frame"
	android:layout_gravity="center_vertical|center_horizontal"
	android:layout_centerInParent="true"
	>



	<LinearLayout android:layout_width="350dip"
		android:layout_height="300dip" android:orientation="vertical"
		android:layout_weight="1" android:paddingTop="10dip"
		android:paddingLeft="10dip" android:paddingRight="10dip"
		android:id="@+id/balloon_inner_layout">
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/balloon_item_title"
			android:text="balloon_item_title" android:textSize="16dip"
			android:textColor="#FF000000"></TextView>

		<ImageView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/camera_image_view"
			android:textSize="16dip" android:textColor="#FF000000"></ImageView>
	</LinearLayout>


</LinearLayout>